@model ShoppingCart.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-2">
        <div class="col-6">
            <h2>List Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp;Create New Category</a>
        </div>
    </div>

    <table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.categories) {
        <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
               
            <td role="group">
                <a asp-action="CreateUpdate" asp-controller="Category"  asp-route-id="@item.Id" style="color: rgb(249, 191, 16)"><i class="bi bi-pencil-square"></i></a> || 
                <a asp-action="Delete" asp-controller="Category"  asp-route-id="@item.Id"><i class="bi bi-trash" style="color: red"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>


