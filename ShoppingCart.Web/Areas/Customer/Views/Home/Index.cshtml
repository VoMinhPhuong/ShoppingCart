@model IEnumerable<ShoppingCart.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">
    @foreach (var item in @Model)
    {
        <div class="card" style="width: 18rem; margin: 20px">
            <img class="card-img-top" src="@item.ImageUrl" alt="Cart image"/>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Price: @item.Price.ToString("000 VNĐ")</p>
                <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id"  class="btn btn-success">Details</a>
            </div>
        </div>
    }
</div>